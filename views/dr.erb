
<h1><%= @doctor.name() %></h1>

<% if @doctor.patients().any?() %>
  <h3>Here are patients:</h3>

  <ul>
    <% @doctor.patients().each() do |patient| %>
      <li><%= patient.name() %> </li>
    <% end %>
  </ul>

  <% else %>
    <p>There are no patients on this doctor!</p>
<% end %>

<h3>Add a patient to <%= @doctor.name() %> </h3>

<form action="/patients" method="post">
  <input id="doctor_id" name="doctor_id" type="hidden" value="<%= @doctor.id() %>">

  <label for="patient">Patient's name:</label>
  <input id="patient" name="patient" type="text">

  <button type="submit">Add task</button>
</form>

